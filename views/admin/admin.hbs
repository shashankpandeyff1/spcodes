      <input type="email" name="mail" value="" required placeholder="mail"><br><br>
      <input type="text" name="mob" value="" required placeholder="mob no"><br><br>
      <input type="text" name="insta" value="" required placeholder="insta link"><br><br>
      <input type="text" name="linkedin" value="" required placeholder="linkedin link"><br><br>
      <input type="text" name="twitter" value="" required placeholder="twitter link"><br><br>
      <input type="text" name="doc" value="" required placeholder="date of creation" class="doc"><br><br>
      <input type="submit" name="" value="add details !">
    </form><br>
  </div>
  <div class="keywords cond">
    <h1>Add Keywords</h1><br>
    <form class="" action="/addkeywords" method="post">
      <input type="text" name="keyword" value="" required placeholder="e.g, coder"><br><br>
      <select class="" name="cat" id="opts">
        <option value="portfolio">portfolio</option>
        <option value="blogs">blogs</option>
      </select><br><br>
      <input type="submit" name="" value="add a keyword !">
    </form>
  </div>
  </div>
