  <script>
  function ppl(){
    let link=encodeURI(window.location.href);
    let doc=document.querySelectorAll('.doc');
    let date= new Date();
    let day=date.getDate();let month=date.getMonth()+1;let year=date.getFullYear();
    let md=`${day}-${month}-${year}`;
    let mt=`${date.getHours()}:${date.getMinutes()}:${date.getSeconds()}`;
    document.getElementsByClassName('pageurl')[0].value=`${link}`;
    document.getElementsByClassName('pageurl')[1].value=`${link}`;
    for (let i = 0; i < doc.length; i++) {
      doc[i].value=`date:${md}`;
    }
  }
  ppl();
  </script>
